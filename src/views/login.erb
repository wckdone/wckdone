<% content_for :title do %>Login<% end %>
<form method="POST">
    <div class="form-group">
	<label>Username</label>
	<input type="text" name="username" value="<%= @user.username %>"
	       autocorrect="off" autocapitalize="off">
	<% if @user.errors[:username] %>
	    <div class="input-error">
		Username <%= @user.errors[:username][0] %>
	    </div>
	<% end %>
    </div>

    <div class="form-group">
	<label>Password</label>
	<input type="password" name="password">
	<% if @user.errors[:password] %>
	    <div class="input-error">
		Password <%= @user.errors[:password][0] %>
	    </div>
	<% end %>
    </div>

    <div class="form-group">
	<input type="submit" value="Login">
	<div>
	    <small>Don't have an account? <a class="link" href="/register">Create one</a></small>
	</div>
    </div>
</form>
